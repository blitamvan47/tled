<body>
  <h1>üé• TikTok Live Dashboard</h1>
  <div class="log" id="log"></div>

  <script>
    // Sesuaikan URL server WebSocket sesuai domain Render
    const ws = new WebSocket(`wss://${window.location.host}`);

    const logDiv = document.getElementById("log");

    function addLog(type, user, msg) {
      const div = document.createElement("div");
      div.className = `event ${type}`;
      div.innerHTML = `<span class="nickname">${user}</span>: ${msg}`;
      logDiv.appendChild(div);
      logDiv.scrollTop = logDiv.scrollHeight;
    }

    ws.onmessage = (event) => {
      try {
        const data = JSON.parse(event.data);
        if (data.type === "chat") {
          addLog("chat", data.user, data.comment);
        } else if (data.type === "gift") {
          addLog("gift", data.user, `sent gift üéÅ ${data.gift}`);
        } else if (data.type === "like") {
          addLog("like", data.user, "liked ‚ù§Ô∏è");
        } else if (data.type === "follow") {
          addLog("follow", data.user, "followed ‚≠ê");
        } else if (data.type === "share") {
          addLog("share", data.user, "shared üîó");
        }
      } catch (err) {
        console.error("WS Error:", err);
      }
    };
  </script>
</body>
</html>
