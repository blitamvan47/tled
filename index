  <div id="log"></div>

  <script>
    const socket = io();

    const log = document.getElementById("log");

    socket.on("event", (data) => {
      const div = document.createElement("div");
      div.classList.add("event", data.type);

      if (data.type === "comment") {
        div.textContent = `ğŸ’¬ ${data.username}: ${data.comment}`;
      } else if (data.type === "like") {
        div.textContent = `â¤ï¸ ${data.username} sent ${data.likeCount} likes`;
      } else if (data.type === "gift") {
        div.textContent = `ğŸ ${data.username} sent gift: ${data.giftName}`;
      } else if (data.type === "follow") {
        div.textContent = `â• ${data.username} followed you!`;
      } else if (data.type === "share") {
        div.textContent = `ğŸ”— ${data.username} shared the live!`;
      }

      log.prepend(div);
    });
  </script>
