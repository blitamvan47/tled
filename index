  <style>
    body {
      font-family: Arial, sans-serif;
      background: #111;
      color: #eee;
      margin: 0;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #ff2d55;
    }
    .log {
      background: #222;
      padding: 10px;
      border-radius: 8px;
      height: 70vh;
      overflow-y: auto;
      font-size: 14px;
    }
    .event {
      margin-bottom: 8px;
      padding: 6px 10px;
      border-radius: 5px;
    }
    .chat { background: #333; }
    .gift { background: #444; color: #ffd700; }
    .like { background: #2a2; }
    .follow { background: #2277ff; }
    .share { background: #aa22ff; }
    .nickname { font-weight: bold; }
